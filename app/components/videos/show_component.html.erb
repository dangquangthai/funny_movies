<div class="grid md:flex gap-2 md:gap-4">
  <% if youtube? %>
    <div class="md:flex-none h-[270px] md:w-[475px] xl:h-[315px] xl:w-[560px] w-full">
      <iframe 
        width="100%" 
        height="100%"
        src="https://www.youtube.com/embed/<%= source_id %>" 
        title="YouTube video player" 
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        allowfullscreen></iframe>
    </div>
  <% else %>
    <h1 class="font-bold text-4xl">Other embedded - not implemented yet</h1>
  <% end %>

  <div class="md:grow">
    <div class="grid gap-2">
      <div class="text-red-600"><%= title %></div>

      <div>Shared by: <%= user.email %></div>

      <div class="flex gap-6">
        <div class="flex gap-1 items-center">
          <div><%= number_to_human(likes_count, units: { thousand: 'k' }, precision: 1, significant: false) %></div>
          <%== material_icon('thumb_up', class: 'text-sm') %>
        </div>

        <div class="flex gap-1 items-center">
          <div><%= number_to_human(dislikes_count, units: { thousand: 'k' }, precision: 1, significant: false) %></div>
          <%== material_icon('thumb_down', class: 'text-sm') %>
        </div>
      </div>

      <div>Description:</div>
      <div><%= description %></div>
    </div>
  </div>
</div>
